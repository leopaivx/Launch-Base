<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://" v
        value="{{teacher.avatar_url}}">
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name" 
        placeholder="Nome do professor"
        value="{{teacher.name}}">
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
        type="date" 
        name="birth"
        value="{{teacher.date}}">
    </div>
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="schooling" id="appearance-select">
            <option disabled="disabled" >Selecione:</option>
            <option value="complete_high_school" {% if teacher.schooling == 'complete_high_school'%}selected{%endif%}>Ensino Médio Completo</option>
            <option value="complete_higher_education" {% if teacher.schooling == 'complete_higher_education'%}selected{%endif%}>Ensino Superior Completo</option>
            <option value="masters" {% if teacher.schooling == 'masters'%}selected{%endif%}>Mestrado</option>
            <option value="doctorate" {% if teacher.schooling == 'doctorate'%}selected{%endif%}>Doutorado</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input
            type="radio" 
            name="course" 
            value="presential"
            {% if teacher.course == "presential" %}
            checked
            {% endif %}>
            Presencial
        </span>

        <span>
            <input 
            type="radio" 
            name="course" v
            alue="e-learning"
            {% if teacher.course == "e-learning" %}
            checked
            {% endif %}>
            À distância
        </span>
    </div>
</div>

<div class="item">
    <div>Acompanhamento</div>
    <div>
        <input
        type="text"
        name="services" 
        placeholder="Separe os serviços prestados por vírgula"
        value="{{teacher.services}}">
    </div>
</div>

<button type="submit">Salvar</button>